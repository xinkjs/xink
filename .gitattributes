# /.gitattributes

# Set default behavior, in case users don't have core.autocrlf set.
# Force LF line endings in the repository for text files.
* text=auto eol=lf

# Force LF line endings for specific text files to be extra sure
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.sh text eol=lf

# Ensure lockfile uses LF (CRITICAL for consistency)
bun.lockb text eol=lf

# Handle specific binary files if needed
# *.png binary
# *.jpg binary
