{
  "name": "xinkjs",
  "version": "0.0.0",
  "description": "monorepo for @xinkjs",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.2",
    "@types/bun": "latest",
    "csstype": "^3.1.3",
    "husky": "^9.1.7",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "docs": "bun run --filter docs dev",
    "release": "bun run build && changeset publish --no-git-tag",
    "build": "tsc -b && bun run --filter xk build",
    "prepare": "npx is-ci || husky"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ]
}
