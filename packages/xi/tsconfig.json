{
  // Inherit common settings from your monorepo root tsconfig.json
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,

    // --- Module Settings for Libraries ---
    // These ensure your output is compatible with modern JavaScript environments.
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler"
  },
  // Tell the compiler which files to include in the build.
  "include": ["./"],
  // Tell the compiler which files to ignore.
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "types.ts"]
}
